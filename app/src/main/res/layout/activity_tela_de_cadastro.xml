<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cinza"
    tools:context=".ui.Registro_Login.register.Tela_de_cadastro">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="110dp"
        app:layout_constraintBottom_toTopOf="@id/idConponents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_com_nome" />

    <View
        android:id="@+id/idConponents"
        style="@style/ContainerComponents"
        android:layout_width="354dp"
        android:layout_height="500dp"
        android:background="@color/cinza"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtVoltarConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/branco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idConponents"
        app:layout_constraintVertical_bias="0.686" />

    <EditText
        android:id="@+id/edtNome"
        style="@style/Edit_text"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="text"
        android:textColor="#808080"
        android:textColorHighlight="#787878"
        android:textColorHint="#6E6E6E"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/Edit_text"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:drawableRight="@drawable/ic_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:textColor="#808080"
        android:textColorHighlight="#787878"
        android:textColorHint="#6E6E6E"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="20dp"
        app:layout_constraintBottom_toTopOf="@id/edtSenhacliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtNome"
        app:layout_constraintVertical_bias="0.405" />

    <EditText
        android:id="@+id/edtSenhacliente"
        style="@style/Edit_text"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:drawableRight="@drawable/ic_eye"
        android:ems="10"
        android:hint="Senha"
        android:inputType="text"
        android:textColorHint="#717171"
        app:layout_constraintBottom_toTopOf="@+id/edttelefone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        app:layout_constraintVertical_bias="0.014" />

    <EditText
        android:id="@+id/edttelefone"
        style="@style/Edit_text"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:drawableRight="@drawable/ic_eye"
        android:ems="10"
        android:hint="telefone"
        android:inputType="text"
        android:textColorHint="#717171"
        app:layout_constraintBottom_toTopOf="@id/edtCpf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtSenhacliente"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/edtCpf"
        style="@style/Edit_text"
        android:layout_width="276dp"
        android:layout_height="58dp"
        android:drawableRight="@drawable/ic_eye"
        android:ems="10"
        android:hint="Cpf"
        android:inputType="text"
        android:textColorHint="#717171"
        app:layout_constraintBottom_toTopOf="@id/btnCadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edttelefone"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/btnCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:padding="15dp"
        android:textColor="@color/branco"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="@id/idConponents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtCpf"
        app:layout_constraintVertical_bias="0.825" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edtNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/idConponents"
        app:layout_constraintVertical_bias="0.234" />

</androidx.constraintlayout.widget.ConstraintLayout>